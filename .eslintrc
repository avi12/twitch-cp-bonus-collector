{
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "rules": {
    "arrow-parens": ["warn", "as-needed"],
    "prefer-const": "warn",
    "no-async-promise-executor": "off",
    "semi": "warn",
    "quotes": [
      "warn",
      "double",
      {
        "allowTemplateLiterals": true
      }
    ],
    "indent": [
      "warn",
      2,
      {
        "SwitchCase": 1
      }
    ],
    "no-unused-vars": "off",
    "comma-dangle": "warn"
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "webextensions": true
  },
  "extends": ["eslint:recommended"]
}
